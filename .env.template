# Allowed hosts for Django application
ALLOWED_HOSTS=*

# Trusted origins for CSRF protection
CSRF_TRUSTED_ORIGINS=https://playground.kitchenai.dev

# Cache settings
CACHE_LOCATION=
KITCHENAI_REDIS_CACHE=False
